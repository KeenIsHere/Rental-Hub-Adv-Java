<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>RentPaid Web Application</display-name>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.hms.controller.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PostPropertyServlet</servlet-name>
    <servlet-class>com.hms.controller.PostPropertyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostPropertyServlet</servlet-name>
    <url-pattern>/addProperty</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hms.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewPropertiesServlet</servlet-name>
    <servlet-class>com.hms.controller.ViewPropertiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewPropertiesServlet</servlet-name>
    <url-pattern>/explore</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewInactivePropertiesServlet</servlet-name>
    <servlet-class>com.hms.controller.ViewInactivePropertiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewInactivePropertiesServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewAllPropertiesServlet</servlet-name>
    <servlet-class>com.hms.controller.ViewAllPropertiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewAllPropertiesServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

</web-app>
